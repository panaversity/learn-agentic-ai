              },
              {
                "key": "Accept",
                "value": "application/json, text/event-stream"
              },
              {
                "key": "mcp-session-id",
                "value": "{{mcp_session_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"notifications/initialized\",\n    \"params\": {}\n}"
            },
            "url": {
              "raw": "http://localhost:8000/mcp/",
              "protocol": "http",
              "host": [
