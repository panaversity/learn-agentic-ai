{
	"info": {
		"name": "MCP Exposing Resources",
		"description": "Educational Postman collection for testing MCP servers with resources. Demonstrates resource discovery and reading for static, dynamic, and templated resources.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "01. Discover Available Resources",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/list\",\n    \"params\": {},\n    \"id\": 1\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Discover what resources the server provides. Should return 3 resources: welcome message, server time, and user profile template."
			}
		},
		{
			"name": "02. Discover Resource Templates",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/templates/list\",\n    \"params\": {},\n    \"id\": 2\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Discover what resource templates the server provides. Resource templates allow for dynamic URI patterns with variables."
			}
		},
		{
			"name": "03. Read Static Resource (Welcome Message)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/read\",\n    \"params\": {\n        \"uri\": \"app:///messages/welcome\"\n    },\n    \"id\": 3\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Read the static welcome message resource. Should return the same message every time."
			}
		},
		{
			"name": "04. Read Dynamic Resource (Server Time)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/read\",\n    \"params\": {\n        \"uri\": \"app:///system/time\"\n    },\n    \"id\": 4\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Read the dynamic server time resource. Should return current UTC time with different values each time you call it."
			}
		},
		{
			"name": "05. Read Templated Resource (User: jane.doe)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/read\",\n    \"params\": {\n        \"uri\": \"users://jane.doe/profile\"\n    },\n    \"id\": 5\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Read a user profile using the templated resource with user_id 'jane.doe'. Shows how URI templates work."
			}
		},
		{
			"name": "06. Read Templated Resource (User: john.smith)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/read\",\n    \"params\": {\n        \"uri\": \"users://john.smith/profile\"\n    },\n    \"id\": 6\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Read a different user profile to demonstrate how the same template works with different user IDs."
			}
		},
		{
			"name": "07. Read Templated Resource (User: alice_123)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/read\",\n    \"params\": {\n        \"uri\": \"users://alice_123/profile\"\n    },\n    \"id\": 7\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Test the templated resource with a user ID containing numbers and underscores."
			}
		},
		{
			"name": "08. Read Templated Resource (Special Characters)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/read\",\n    \"params\": {\n        \"uri\": \"users://user-with-dashes/profile\"\n    },\n    \"id\": 8\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Test the templated resource with special characters in the user ID."
			}
		},
		{
			"name": "09. Multiple Time Requests (Compare Dynamic)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/read\",\n    \"params\": {\n        \"uri\": \"app:///system/time\"\n    },\n    \"id\": 9\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Read the server time again to compare with previous request. Notice how the timestamp changes - this demonstrates dynamic resources."
			}
		},
		{
			"name": "10. Error: Invalid Resource URI",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json, text/event-stream"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"jsonrpc\": \"2.0\",\n    \"method\": \"resources/read\",\n    \"params\": {\n        \"uri\": \"app:///nonexistent/resource\"\n    },\n    \"id\": 10\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/mcp",
					"host": ["{{baseUrl}}"],
					"path": ["mcp"]
				},
				"description": "Test error handling by requesting a resource that doesn't exist. Should return an error response."
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8000",
			"type": "string"
		}
	]
} 